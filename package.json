{
  "name": "testreflux",
  "version": "0.0.0",
  "description": "",
  "repository": "",
  "private": true,
  "src": "src",
  "test": "test",
  "dist": "dist",
  "mainInput": "main",
  "mainOutput": "main",
  "devDependencies": {
    "babel-eslint": "^6.1.2",
    "react": "^15.2.1",
    "eslint": "^3.5.0",
    "eslint-config-airbnb": "^11.1.0",
    "eslint-plugin-babel": "^3.3.0",
    "eslint-plugin-import": "^1.15.0",
    "eslint-plugin-jsx-a11y": "^2.2.2",
    "eslint-plugin-react": "^6.2.2",
    "ghooks": "^1.3.2",
    "prepare-commit-msg-dianwoda": "^0.2.1",
    "validate-commit-msg": "^2.8.0"
  },
  "config": {
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert"
      ],
      "warnOnFail": false,
      "maxSubjectLength": 100,
      "subjectPattern": ".+",
      "subjectPatternErrorMsg": "subject does not match subject pattern!",
      "helpMessage": ""
    },
    "ghooks": {
      "pre-commit": "npm run precommit-msg && npm run lint",
      "prepare-commit-msg": "prepare-commit-msg-dianwoda $2 $3",
      "commit-msg": "validate-commit-msg"
    }
  },
  "scripts": {
    "lint": "DEBUG=eslint:cli,eslint:cli-engine,eslint:glob-util eslint ./ --cache --ignore-pattern .gitignore",
    "precommit-msg": "echo Pre-commit checking...please wait && exit 0"
  }
}
